<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imagenSigno">
        <item name="android:padding">4dp</item>
    </style>

    <style name="cardSigno">
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/border_radius</item>
    </style>

    <style name="layoutRow">
        <item name="android:layout_weight">0.25</item>
    </style>

    <style name="fec1">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="nom1">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tit1">
        <item name="android:textSize">40dp</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="tit2">
        <item name="android:textSize">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="titulo1">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="texto1">
        <item name="android:textSize">16dp</item>
    </style>

    <style name="cardGeneral">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="autor">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="portadaabout">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
